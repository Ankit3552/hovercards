{{#content}}
	{{#if .text || .name}}
		<div decorator="readmore:{{ _.prefix('collapsed-description') }},{{ _.prefix('expand-description') }}" class="{{ prefix('description') }}">
			{{#if .name}}
				<a class="no-hovercard {{ prefix('description-title') }}" href="{{ ~/url(.) || .url }}" target="_blank">{{ .name }}</a>
			{{/if}}
			{{#if .text}}
				<p>{{{ .text }}}</p>
			{{/if}}
		</div>
	{{/if}}
{{/content}}
