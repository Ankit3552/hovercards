{
  "name": "hovercards",
  "version": "3.1.0",
  "description": "Get more content. Open fewer tabs.",
  "homepage": "http://hovercards.com",
  "bugs": {
    "url": "https://github.com/teamkogg/hovercards/issues"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teamkogg/hovercards.git"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:extension": "NODE_ENV=production webpack -p --config app/webpack.config.js && mkdir -p build && zip -q -r build/pkg-$npm_package_version.zip dist",
    "build:www": "webpack -p --config www/webpack.config.js",
    "clean": "rm -rf dist dist-* build dump.rdb npm-debug.log*",
    "deploy:www": "gh-pages -d dist-www",
    "fix": "run-p fix:*",
    "fix:css": "( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \".s\\?css$\" | xargs -I '{}' -n 1 cssfmt {} ) && ( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \".s\\?css$\" | xargs git add )",
    "fix:js": "( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \".jsx\\?$\" | xargs eslint --fix ) && ( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \".jsx\\?$\" | xargs git add )",
    "start": "if [ \"$NODE_ENV\" = 'production' ]; then foreman start; else foreman start -f Procfile.dev; fi",
    "test": "eslint . --ignore-path .gitignore --ignore-pattern 'shared/**' && mocha shared/**/test.js"
  },
  "dependencies": {
    "async": "^1.5.0",
    "autolinker": "^0.19.0",
    "cheerio": "^0.19.0",
    "connect-redis": "^3.0.2",
    "express": "^4.13.3",
    "express-session": "^1.11.3",
    "googleapis": "^2.1.6",
    "instagram-node": "^0.5.8",
    "jquery": "^2.1.4",
    "memoizee": "^0.3.9",
    "passport": "^0.2.2",
    "passport-twitter": "^1.0.3",
    "ractive": "^0.7.3",
    "redis": "^2.4.2",
    "request": "^2.65.0",
    "snoocore": "^3.2.0",
    "twit": "^2.1.1",
    "underscore": "^1.8.3",
    "urijs": "^1.17.0"
  },
  "devDependencies": {
    "chai": "^3.3.0",
    "clean-webpack-plugin": "^0.1.10",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "cssfmt": "^1.4.1",
    "eslint": "^1.10.3",
    "eslint-config-xo": "^0.9.2",
    "eslint-plugin-react": "^3.16.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "favicons-webpack-plugin": "0.0.6",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.11.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "image-webpack-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "mocha": "^2.3.3",
    "nock": "^2.13.0",
    "nodemon": "^1.8.1",
    "npm-run-all": "^2.3.0",
    "postcss-loader": "^0.9.1",
    "postcss-safe-important": "^1.0.4",
    "pre-commit": "^1.1.2",
    "ractive-component-loader": "^1.2.0",
    "ractive-loader": "^0.5.6",
    "sinon": "^1.17.1",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-dotenv-plugin": "^1.3.2",
    "write-file-webpack-plugin": "^3.1.8"
  },
  "engines": {
    "node": "^4.1.0",
    "npm": "^3.9.0"
  },
  "pre-commit": [
    "fix",
    "test"
  ]
}
