{
  "name": "hovercards",
  "version": "3.1.0",
  "description": "Get more content. Open fewer tabs.",
  "homepage": "http://hovercards.com",
  "bugs": {
    "url": "https://github.com/teamkogg/hovercards/issues"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teamkogg/hovercards.git"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:extension": "NODE_ENV=production webpack -p --config webpack.config.extension.js && run-p build:extension:* && mkdir -p build && zip -q -r build/pkg-$npm_package_version.zip dist",
    "build:extension:background": "NODE_ENV=production ENTRY=background webpack -p --config webpack.config.extension.js",
    "build:extension:options": "NODE_ENV=production ENTRY=options webpack -p --config webpack.config.extension.js",
    "build:extension:top-frame": "NODE_ENV=production ENTRY=top-frame webpack -p --config webpack.config.extension.js",
    "build:www": "webpack -p --config webpack.config.www.js",
    "clean": "rm -rf dist dist-* build dump.rdb npm-debug.log*",
    "deploy:www": "gh-pages -d dist-www",
    "fix": "run-p fix:style:*",
    "fix:style:css": "( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \".s\\?css$\" | xargs -I '{}' -n 1 stylefmt {} ) && ( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \".s\\?css$\" | xargs git add )",
    "fix:style:js": "( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \".jsx\\?$\" | xargs eslint --fix ) && ( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \".jsx\\?$\" | xargs git add )",
    "start": "if [ \"$NODE_ENV\" = 'production' ]; then foreman start; else foreman start -f Procfile.dev; fi",
    "test": "run-s test:*",
    "test:lint": "eslint . --ignore-path .gitignore --ignore-pattern 'integrations/**' --ignore-pattern 'old-stuff/**'",
    "test:unit": "mocha \"./{,!(node_modules)/**/}*.test.js\""
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run fix && npm run test:lint",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "async": "^2.0.1",
    "autolinker": "^0.27.0",
    "cheerio": "^0.20.0",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "connect-redis": "^3.0.2",
    "es6-promisify": "^4.1.0",
    "express-session": "^1.11.3",
    "feathers": "^2.0.1",
    "flux-standard-action": "^0.6.1",
    "googleapis": "^12.0.0",
    "helmet": "^2.1.2",
    "instagram-node": "^0.5.8",
    "jquery": "^3.1.0",
    "passport": "^0.3.2",
    "passport-twitter": "^1.0.3",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "redis": "^2.4.2",
    "redux": "^3.5.2",
    "redux-actions": "^0.10.1",
    "redux-thunk": "^2.1.0",
    "request": "^2.74.0",
    "reselect": "^2.5.3",
    "rollbar-browser": "^1.9.1",
    "snoocore": "^3.2.0",
    "twit": "^2.1.1",
    "underscore": "^1.8.3",
    "universal-analytics": "^0.4.2",
    "urijs": "^1.17.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-computed-properties": "^6.8.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-native": "^1.9.0",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.3.0",
    "clean-webpack-plugin": "^0.1.10",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "deep-diff": "^0.3.4",
    "eslint": "^3.2.2",
    "eslint-config-xo": "^0.15.3",
    "eslint-plugin-react": "^6.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "favicons-webpack-plugin": "0.0.6",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.11.0",
    "ghooks": "^1.3.2",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "html-webpack-template": "^5.0.0",
    "image-webpack-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.0.0",
    "nock": "^8.0.0",
    "node-fetch": "^1.6.0",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "postcss-loader": "^0.9.1",
    "postcss-nested": "^1.0.0",
    "postcss-safe-important": "^1.0.4",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "stylefmt": "^4.2.3",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-dotenv-plugin": "^1.3.2",
    "write-file-webpack-plugin": "^3.1.8"
  },
  "engines": {
    "node": "^4.1.0",
    "npm": "^3.9.0"
  }
}
