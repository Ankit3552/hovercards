{
  "name": "YoCardsExt",
  "description": "",
  "version": "0.13.0",
  "repository": "cameronrohani/YoCardsExt",
  "scripts": {
    "start": "npm run start:chromium",
    "start:safari": "npm run watch:safari & npm run watchify:safari && wait",
    "start:chromium": "npm run watch:chromium & npm run watchify:chromium && wait",
    "pkg:chromium": "npm run clean:chromium && npm run copy:chromium && npm run browserify:chromium && npm run uglify:chromium && npm run compress:chromium",
    "test": "jshint --reporter=node_modules/jshint-stylish/index.js app/**/*.js",
    "browserify:safari": "npm run browserify:safari:background && npm run browserify:safari:everywhere && npm run browserify:safari:sidebar && npm run browserify:safari:soundcloud-player && npm run browserify:safari:top-frame",
    "browserify:safari:background": "browserify app/scripts/background-main.js -o dist/safari.safariextension/scripts/background-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:safari:everywhere": "browserify app/scripts/everywhere-main.js -o dist/safari.safariextension/scripts/everywhere-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:safari:sidebar": "browserify app/scripts/sidebar-main.js -o dist/safari.safariextension/scripts/sidebar-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:safari:soundcloud-player": "browserify app/scripts/soundcloud-player-main.js -o dist/safari.safariextension/scripts/soundcloud-player-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:safari:top-frame": "browserify app/scripts/top-frame-main.js -o dist/safari.safariextension/scripts/top-frame-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:chromium": "npm run browserify:chromium:background && npm run browserify:chromium:everywhere && npm run browserify:chromium:sidebar && npm run browserify:chromium:soundcloud-player && npm run browserify:chromium:top-frame",
    "browserify:chromium:background": "browserify app/scripts/background-main.js -o dist/chromium/scripts/background-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:chromium:everywhere": "browserify app/scripts/everywhere-main.js -o dist/chromium/scripts/everywhere-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:chromium:sidebar": "browserify app/scripts/sidebar-main.js -o dist/chromium/scripts/sidebar-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:chromium:soundcloud-player": "browserify app/scripts/soundcloud-player-main.js -o dist/chromium/scripts/soundcloud-player-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:chromium:top-frame": "browserify app/scripts/top-frame-main.js -o dist/chromium/scripts/top-frame-main.js -r ./app/scripts/production-env.js:env -v",
    "clean": "npm run clean:safari && npm run clean:chromium",
    "clean:safari": "rm -rf dist/safari.safariextension/*",
    "clean:chromium": "rm -rf dist/chromium/*",
    "compress:chromium": "zip -q -r build/chromium-pkg-$npm_package_version.zip dist/chromium",
    "copy:safari": "rsync -r --exclude=scripts/* app/* dist/safari.safariextension && rsync -r --exclude=scripts/* safari.safariextension/* dist/safari.safariextension && cp node_modules/angular/angular-csp.css dist/safari.safariextension/styles/ && cp node_modules/slick-carousel/slick/slick.css dist/safari.safariextension/styles/ && cp node_modules/perfect-scrollbar/dist/css/perfect-scrollbar.css dist/safari.safariextension/styles/",
    "copy:chromium": "rsync -r --exclude=scripts/* app/* dist/chromium && rsync -r --exclude=scripts/* chromium/* dist/chromium && cp node_modules/angular/angular-csp.css dist/chromium/styles/ && cp node_modules/slick-carousel/slick/slick.css dist/chromium/styles/ && cp node_modules/perfect-scrollbar/dist/css/perfect-scrollbar.css dist/chromium/styles/",
    "uglify:safari": "npm run uglify:safari:background && npm run uglify:safari:everywhere && npm run uglify:safari:sidebar && npm run uglify:safari:soundcloud-player && npm run uglify:safari:top-frame",
    "uglify:safari:background": "uglifyjs dist/safari.safariextension/scripts/background-main.js -o dist/safari.safariextension/scripts/background-main.js -c drop_console=true,warnings=false",
    "uglify:safari:everywhere": "uglifyjs dist/safari.safariextension/scripts/everywhere-main.js -o dist/safari.safariextension/scripts/everywhere-main.js -c drop_console=true,warnings=false",
    "uglify:safari:sidebar": "uglifyjs dist/safari.safariextension/scripts/sidebar-main.js -o dist/safari.safariextension/scripts/sidebar-main.js -c drop_console=true,warnings=false",
    "uglify:safari:soundcloud-player": "uglifyjs dist/safari.safariextension/scripts/soundcloud-player-main.js -o dist/safari.safariextension/scripts/soundcloud-player-main.js -c drop_console=true,warnings=false",
    "uglify:safari:top-frame": "uglifyjs dist/safari.safariextension/scripts/top-frame-main.js -o dist/safari.safariextension/scripts/top-frame-main.js -c drop_console=true,warnings=false",
    "uglify:chromium": "npm run uglify:chromium:background && npm run uglify:chromium:everywhere && npm run uglify:chromium:sidebar && npm run uglify:chromium:soundcloud-player && npm run uglify:chromium:top-frame",
    "uglify:chromium:background": "uglifyjs dist/chromium/scripts/background-main.js -o dist/chromium/scripts/background-main.js -c drop_console=true,warnings=false",
    "uglify:chromium:everywhere": "uglifyjs dist/chromium/scripts/everywhere-main.js -o dist/chromium/scripts/everywhere-main.js -c drop_console=true,warnings=false",
    "uglify:chromium:sidebar": "uglifyjs dist/chromium/scripts/sidebar-main.js -o dist/chromium/scripts/sidebar-main.js -c drop_console=true,warnings=false",
    "uglify:chromium:soundcloud-player": "uglifyjs dist/chromium/scripts/soundcloud-player-main.js -o dist/chromium/scripts/soundcloud-player-main.js -c drop_console=true,warnings=false",
    "uglify:chromium:top-frame": "uglifyjs dist/chromium/scripts/top-frame-main.js -o dist/chromium/scripts/top-frame-main.js -c drop_console=true,warnings=false",
    "watch:safari": "watch 'npm run copy:safari' app",
    "watch:chromium": "watch 'npm run copy:chromium' app",
    "watchify:safari": "npm run watchify:safari:background & npm run watchify:safari:everywhere & npm run watchify:safari:sidebar & npm run watchify:safari:soundcloud-player & npm run watchify:safari:top-frame && wait",
    "watchify:safari:background": "watchify app/scripts/background-main.js -o dist/safari.safariextension/scripts/background-main.js -r ./app/scripts/development-env.js:env -v",
    "watchify:safari:everywhere": "watchify app/scripts/everywhere-main.js -o dist/safari.safariextension/scripts/everywhere-main.js -r ./app/scripts/development-env.js:env -v",
    "watchify:safari:sidebar": "watchify app/scripts/sidebar-main.js -o dist/safari.safariextension/scripts/sidebar-main.js -r ./app/scripts/development-env.js:env -v",
    "watchify:safari:soundcloud-player": "watchify app/scripts/soundcloud-player-main.js -o dist/safari.safariextension/scripts/soundcloud-player-main.js -r ./app/scripts/development-env.js:env -v",
    "watchify:safari:top-frame": "watchify app/scripts/top-frame-main.js -o dist/safari.safariextension/scripts/top-frame-main.js -r ./app/scripts/development-env.js:env -v",
    "watchify:chromium": "npm run watchify:chromium:background & npm run watchify:chromium:everywhere & npm run watchify:chromium:sidebar & npm run watchify:chromium:soundcloud-player & npm run watchify:chromium:top-frame && wait",
    "watchify:chromium:background": "watchify app/scripts/background-main.js -o dist/chromium/scripts/background-main.js -r ./app/scripts/development-env.js:env -v",
    "watchify:chromium:everywhere": "watchify app/scripts/everywhere-main.js -o dist/chromium/scripts/everywhere-main.js -r ./app/scripts/development-env.js:env -v",
    "watchify:chromium:sidebar": "watchify app/scripts/sidebar-main.js -o dist/chromium/scripts/sidebar-main.js -r ./app/scripts/development-env.js:env -v",
    "watchify:chromium:soundcloud-player": "watchify app/scripts/soundcloud-player-main.js -o dist/chromium/scripts/soundcloud-player-main.js -r ./app/scripts/development-env.js:env -v",
    "watchify:chromium:top-frame": "watchify app/scripts/top-frame-main.js -o dist/chromium/scripts/top-frame-main.js -r ./app/scripts/development-env.js:env -v"
  },
  "dependencies": {
    "URIjs": "^1.16.0",
    "YoCardsAPICalls": "cameronrohani/YoCardsAPICalls",
    "angular": "^1.4.3",
    "angular-animate": "^1.4.3",
    "angular-inview": "^1.5.0",
    "angular-messages": "^1.4.3",
    "angular-sanitize": "^1.4.3",
    "async": "^1.4.0",
    "jquery": "^2.1.4",
    "jquery-ui": "^1.10.5",
    "moment": "^2.10.5",
    "perfect-scrollbar": "^0.6.4",
    "slick-carousel": "^1.5.8",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "browserify": "^11.0.0",
    "browserify-shim": "^3.8.10",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.0.1",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js"
  },
  "browserify-shim": {
    "jquery": "$"
  }
}
