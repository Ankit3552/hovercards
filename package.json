{
  "name": "hovercardsextension",
  "description": "",
  "version": "1.2.3",
  "repository": "cameronrohani/hovercardsextension",
  "scripts": {
    "start": "watch 'npm run copy:other' app & npm run postcss -- -w & npm run watchify && wait",
    "pkg": "npm run clean && npm run copy:other && npm run postcss && npm run browserify && npm run uglifyjs && zip -q -r build/pkg-$npm_package_version.zip dist",
    "copy:other": "rsync -rm --include='*/' --include='*.json' --include='options.html' --exclude='*' app/* dist && mkdir -p dist/assets/images && cp app/images/logo-* dist/assets/images",
    "postcss": "postcss app/*.css -d dist/ -c postcss.js",
    "browserify": "mkdir -p dist && browserify $npm_package_config_browserify_input $npm_package_config_browserify_output",
    "uglifyjs": "mkdir -p dist && find dist -name \\*.js | xargs -I FILENAME uglifyjs FILENAME -o FILENAME -c drop_console,warnings=false --stats",
    "watchify": "mkdir -p dist && watchify $npm_package_config_browserify_input -t [ envify --NODE_ENV development ] $npm_package_config_browserify_output --full-paths -v -d",
    "discify": "browserify $npm_package_config_browserify_input --full-paths | uglifyjs -c drop_console,warnings=false | discify -O",
    "test": "npm run jshint",
    "jshint": "jshint --reporter=node_modules/jshint-stylish app/*.js app/**/*.js",
    "clean": "rm -rf dist/* *.pem *.nex",
    "postinstall": "if [ -d .git ]; then rm -rf .git/hooks && ln -s ../hooks .git/hooks; fi",
    "postuninstall": "if [ -d .git ]; then rm -rf .git/hooks; fi"
  },
  "config": {
    "browserify": {
      "input": "app/background.js app/every-frame.js app/top-frame.js app/options.js",
      "output": "-o dist/common.js -p [ factor-bundle -o dist/background.js -o dist/every-frame.js -o dist/top-frame.js -o dist/options.js ]"
    }
  },
  "browserify": {
    "transform": [
      [
        "envify",
        {
          "NODE_ENV": "production"
        }
      ],
      "require-globify",
      "ractivate",
      "ractiveify"
    ]
  },
  "dependencies": {
    "async": "^1.4.2",
    "hovercardsshared": "cameronrohani/hovercardsshared#v2.0.0",
    "jquery": "^2.1.4",
    "memoizee": "^0.3.9",
    "ractive": "^0.7.3",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "browserify": "^11.2.0",
    "disc": "^1.3.2",
    "envify": "^3.4.0",
    "factor-bundle": "^2.5.0",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.0.1",
    "postcss-class-prefix": "^0.3.0",
    "postcss-cli": "^2.3.2",
    "postcss-color-rgba-fallback": "^2.0.0",
    "postcss-extend": "^1.0.1",
    "postcss-import": "^7.0.0",
    "postcss-map-url": "^1.0.2",
    "postcss-reporter": "^1.2.1",
    "postcss-url": "^5.0.2",
    "ractivate": "^0.2.0",
    "ractiveify": "^1.5.6",
    "require-globify": "^1.3.0",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.4.0"
  }
}
