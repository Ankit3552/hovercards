{
  "name": "hovercardsextension",
  "description": "",
  "version": "1.2.2",
  "repository": "cameronrohani/hovercardsextension",
  "scripts": {
    "start": "npm run process:other:watch & npm run postcss:watch & npm run watchify && wait",
    "test": "npm run csslint && npm run jshint",
    "pkg": "npm run clean && npm run process:other && npm run postcss && npm run browserify && npm run uglifyjs && zip -q -r build/pkg-$npm_package_version.zip dist",
    "clean": "rm -rf dist/* *.pem *.nex",
    "browserify": "mkdir -p dist/scripts && browserify $npm_package_config_browserify_input -p [ factor-bundle $npm_package_config_browserify_output ] $npm_package_config_browserify_args",
    "csslint": "csslint --format=compact --quiet app/styles/*",
    "jshint": "jshint --reporter=node_modules/jshint-stylish app/scripts/*.js app/scripts/**/*.js",
    "postcss": "mkdir -p dist/styles && postcss $npm_package_config_postcss_args node_modules/hovercardsshared/styles/*.css -d dist/styles/ && postcss $npm_package_config_postcss_args app/styles/*.css -d dist/styles/",
    "postcss:watch": "npm run postcss -- -w",
    "postinstall": "rm -rf .git/hooks && ln -s ../hooks .git/hooks",
    "postuninstall": "rm -rf .git/hooks",
    "process:other": "rsync -rm --include '*/' --exclude='*.js' --exclude='*.css' app/* dist",
    "process:other:watch": "watch 'npm run process:other' app",
    "uglifyjs": "mkdir -p dist/scripts && find dist/scripts -name \\*.js | xargs -I FILENAME uglifyjs FILENAME -o FILENAME -c drop_console,warnings=false --stats",
    "watchify": "mkdir -p dist/scripts && watchify $npm_package_config_browserify_input -p [ factor-bundle $npm_package_config_browserify_output ] $npm_package_config_browserify_args -v -d"
  },
  "config": {
    "browserify": {
      "args": "-o dist/scripts/common-main.js -r ./app/scripts/development-env.js:env -t [ jstify --templateOpts [ --variable data ] ]",
      "input": "app/scripts/background-main.js app/scripts/everywhere-main.js app/scripts/top-frame-main.js app/scripts/options-main.js app/scripts/soundcloud-player-main.js",
      "output": "-o dist/scripts/background-main.js -o dist/scripts/everywhere-main.js -o dist/scripts/top-frame-main.js -o dist/scripts/options-main.js -o dist/scripts/soundcloud-player-main.js"
    },
    "postcss": {
      "args": "--use postcss-class-prefix --postcss-class-prefix __MSG_@@extension_id__- --use postcss-color-rgba-fallback --use autoprefixer"
    }
  },
  "dependencies": {
    "angular": "^1.4.7",
    "angular-animate": "^1.4.7",
    "angular-inview": "^1.5.0",
    "angular-messages": "^1.4.7",
    "angular-sanitize": "^1.4.7",
    "async": "^1.4.2",
    "hovercardsshared": "cameronrohani/hovercardsshared#v1.1.0",
    "jquery": "^2.1.4",
    "jquery-ui": "^1.10.5",
    "memoizee": "^0.3.9",
    "moment": "^2.10.6",
    "perfect-scrollbar": "^0.6.4",
    "slick-carousel": "^1.5.8",
    "underscore": "^1.8.3",
    "urijs": "^1.16.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "browserify": "^11.2.0",
    "csslint": "^0.10.0",
    "factor-bundle": "^2.5.0",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.0.1",
    "jstify": "^0.12.0",
    "postcss-class-prefix": "^0.3.0",
    "postcss-cli": "^2.1.0",
    "postcss-color-rgba-fallback": "^2.0.0",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.4.0"
  },
  "engines": {
    "node": ">=0.8.0"
  }
}
