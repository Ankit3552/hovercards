{
  "name": "hovercardsextension",
  "description": "",
  "version": "1.2.2",
  "repository": "cameronrohani/hovercardsextension",
  "scripts": {
    "start": "npm run process:other:watch & npm run postcss:watch & npm run watchify && wait",
    "test": "npm run csslint && npm run jshint",
    "pkg": "npm run clean && npm run process:other && npm run postcss && npm run browserify && npm run uglifyjs && zip -q -r build/pkg-$npm_package_version.zip dist",
    "clean": "rm -rf dist/* *.pem *.nex",
    "browserify": "mkdir -p dist && browserify $npm_package_config_browserify_input -t [ envify --NODE_ENV production ] $npm_package_config_browserify_args",
    "csslint": "csslint --format=compact --quiet --exclude-list=app/old app/**/*.css",
    "jshint": "jshint --reporter=node_modules/jshint-stylish app/*.js app/**/*.js",
    "postcss": "postcss app/*.css -d dist/ -c postcss.js",
    "better_postcss:watch": "npm run postcss -- -w",
    "postcss:watch": "watch 'npm run postcss' app",
    "postinstall": "rm -rf .git/hooks && ln -s ../hooks .git/hooks",
    "postuninstall": "rm -rf .git/hooks",
    "process:other": "rsync -rm --exclude 'old/' --exclude='*.js' --exclude='*.css' --exclude='*.tpl' app/* dist",
    "process:other:watch": "watch 'npm run process:other' app",
    "uglifyjs": "mkdir -p dist && find dist -name \\*.js | xargs -I FILENAME uglifyjs FILENAME -o FILENAME -c drop_console,warnings=false --stats",
    "watchify": "mkdir -p dist && watchify $npm_package_config_browserify_input -t [ envify --NODE_ENV development ] $npm_package_config_browserify_args --full-paths -v -d",
    "discify": "browserify $npm_package_config_browserify_input --full-paths -t [ jstify --templateOpts [ --variable data ] ] | discify -O"
  },
  "config": {
    "browserify": {
      "input": "app/background.js app/everywhere.js app/top-frame.js app/options.js app/soundcloud-player.js",
      "args": "-o dist/common.js -t [ jstify --templateOpts [ --variable data ] ] -p [ factor-bundle -o dist/background.js -o dist/everywhere.js -o dist/top-frame.js -o dist/options.js -o dist/soundcloud-player.js ]"
    }
  },
  "dependencies": {
    "angular": "^1.4.7",
    "angular-animate": "^1.4.7",
    "angular-inview": "^1.5.0",
    "angular-messages": "^1.4.7",
    "angular-sanitize": "^1.4.7",
    "async": "^1.4.2",
    "hovercardsshared": "cameronrohani/hovercardsshared#v1.1.0",
    "jquery": "^2.1.4",
    "jquery-ui": "^1.10.5",
    "memoizee": "^0.3.9",
    "moment": "^2.10.6",
    "perfect-scrollbar": "^0.6.4",
    "slick-carousel": "^1.5.8",
    "underscore": "^1.8.3",
    "urijs": "^1.16.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "browserify": "^11.2.0",
    "csslint": "^0.10.0",
    "disc": "^1.3.2",
    "envify": "^3.4.0",
    "factor-bundle": "^2.5.0",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.0.1",
    "jstify": "^0.12.0",
    "postcss-class-prefix": "^0.3.0",
    "postcss-cli": "^2.1.0",
    "postcss-color-rgba-fallback": "^2.0.0",
    "postcss-import": "^7.0.0",
    "postcss-reporter": "^1.2.1",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.4.0"
  },
  "engines": {
    "node": ">=0.8.0"
  }
}
