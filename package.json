{
  "name": "YoCardsExt",
  "description": "",
  "version": "0.14.1",
  "repository": "cameronrohani/YoCardsExt",
  "scripts": {
    "start": "npm run watch:non_js & npm run watchify:background & npm run watchify:everywhere & npm run watchify:hovercard & npm run watchify:sidebar & npm run watchify:soundcloud-player & npm run watchify:top-frame && wait",
    "pkg": "npm run clean && npm run copy:non_js && npm run browserify && npm run uglify && npm run compress",
    "test": "jshint --reporter=node_modules/jshint-stylish/index.js app/**/*.js",
    "browserify": "npm run browserify:background && npm run browserify:everywhere && npm run browserify:hovercard && npm run browserify:sidebar && npm run browserify:soundcloud-player && npm run browserify:top-frame",
    "browserify:background": "browserify app/scripts/background-main.js -o dist/scripts/background-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:everywhere": "browserify app/scripts/everywhere-main.js -o dist/scripts/everywhere-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:hovercard": "browserify app/scripts/hovercard-main.js -o dist/scripts/hovercard-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:sidebar": "browserify app/scripts/sidebar-main.js -o dist/scripts/sidebar-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:soundcloud-player": "browserify app/scripts/soundcloud-player-main.js -o dist/scripts/soundcloud-player-main.js -r ./app/scripts/production-env.js:env -v",
    "browserify:top-frame": "browserify app/scripts/top-frame-main.js -o dist/scripts/top-frame-main.js -r ./app/scripts/production-env.js:env -v",
    "clean": "rm -rf dist/*",
    "compress": "zip -q -r build/pkg-$npm_package_version.zip dist",
    "copy:non_js": "rsync -r --exclude=scripts/* app/* dist && cp node_modules/angular/angular-csp.css dist/styles/ && cp node_modules/slick-carousel/slick/slick.css dist/styles/ && cp node_modules/perfect-scrollbar/dist/css/perfect-scrollbar.min.css dist/styles/",
    "uglify": "npm run uglify:background && npm run uglify:everywhere && npm run uglify:hovercard && npm run uglify:sidebar && npm run uglify:soundcloud-player && npm run uglify:top-frame",
    "uglify:background": "uglifyjs dist/scripts/background-main.js -o dist/scripts/background-main.js -c drop_console=true,warnings=false",
    "uglify:everywhere": "uglifyjs dist/scripts/everywhere-main.js -o dist/scripts/everywhere-main.js -c drop_console=true,warnings=false",
    "uglify:hovercard": "uglifyjs dist/scripts/hovercard-main.js -o dist/scripts/hovercard-main.js -c drop_console=true,warnings=false",
    "uglify:sidebar": "uglifyjs dist/scripts/sidebar-main.js -o dist/scripts/sidebar-main.js -c drop_console=true,warnings=false",
    "uglify:soundcloud-player": "uglifyjs dist/scripts/soundcloud-player-main.js -o dist/scripts/soundcloud-player-main.js -c drop_console=true,warnings=false",
    "uglify:top-frame": "uglifyjs dist/scripts/top-frame-main.js -o dist/scripts/top-frame-main.js -c drop_console=true,warnings=false",
    "watch:non_js": "watch 'npm run copy:non_js' app",
    "watchify:background": "watchify app/scripts/background-main.js -o dist/scripts/background-main.js -r ./app/scripts/development-env.js:env -v -d",
    "watchify:everywhere": "watchify app/scripts/everywhere-main.js -o dist/scripts/everywhere-main.js -r ./app/scripts/development-env.js:env -v -d",
    "watchify:hovercard": "watchify app/scripts/hovercard-main.js -o dist/scripts/hovercard-main.js -r ./app/scripts/development-env.js:env -v -d",
    "watchify:sidebar": "watchify app/scripts/sidebar-main.js -o dist/scripts/sidebar-main.js -r ./app/scripts/development-env.js:env -v -d",
    "watchify:soundcloud-player": "watchify app/scripts/soundcloud-player-main.js -o dist/scripts/soundcloud-player-main.js -r ./app/scripts/development-env.js:env -v -d",
    "watchify:top-frame": "watchify app/scripts/top-frame-main.js -o dist/scripts/top-frame-main.js -r ./app/scripts/development-env.js:env -v -d"
  },
  "dependencies": {
    "URIjs": "^1.16.0",
    "YoCardsAPICalls": "cameronrohani/YoCardsAPICalls#develop",
    "angular": "^1.4.3",
    "angular-animate": "^1.4.3",
    "angular-inview": "^1.5.0",
    "angular-messages": "^1.4.3",
    "angular-sanitize": "^1.4.3",
    "async": "^1.4.0",
    "jquery": "^2.1.4",
    "jquery-ui": "^1.10.5",
    "memoizee": "^0.3.9",
    "moment": "^2.10.5",
    "perfect-scrollbar": "^0.6.4",
    "slick-carousel": "^1.5.8",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "browserify": "^11.0.0",
    "browserify-shim": "^3.8.10",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.0.1",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js"
  },
  "browserify-shim": {
    "jquery": "$"
  }
}
