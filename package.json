{
  "name": "hovercardsextension",
  "version": "3.0.0",
  "description": "",
  "homepage": "http://hovercards.com",
  "bugs": {
    "url": "https://github.com/cameronrohani/hovercardsextension/issues"
  },
  "license": "ISC",
  "author": {
    "name": "kogg",
    "email": "team@hovercards.com",
    "url": "http://ko.gg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cameronrohani/hovercardsextension.git"
  },
  "scripts": {
    "browserify": "mkdir -p dist && browserify $npm_package_config_browserify_input $npm_package_config_browserify_output",
    "build:landing": "rm -rf dist && webpack -p",
    "clean": "rm -rf dist/* dist-landing/* *.pem *.nex dump.rdb",
    "copy:other": "rsync -rm --include='*/' --include='*.json' --include='options.html' --exclude='*' app/* dist && mkdir -p dist/assets/images && cp app/images/logo-* dist/assets/images && cp app/images/*-icon-full_color.png dist/assets/images",
    "postcss": "postcss app/*.css -d dist/ -c postcss.js",
    "cssfmt": "( git diff --staged --name-only | grep \".s\\?css$\" | xargs -I '{}' -n 1 cssfmt {} ) && ( git diff --staged --name-only | grep \".s\\?css$\" | xargs git add )",
    "deploy:landing": "gh-pages -d dist-landing",
    "eslint-fix": "( git diff --staged --name-only | grep \".jsx\\?$\" | xargs eslint --fix ) && ( git diff --staged --name-only | grep \".jsx\\?$\" | xargs git add )",
    "fix": "npm run cssfmt && npm run eslint-fix",
    "pkg": "npm run clean && npm run copy:other && npm run postcss && npm run browserify && npm run uglifyjs && zip -q -r build/pkg-$npm_package_version.zip dist",
    "start": "if [ \"$NODE_ENV\" = 'production' ]; then foreman start; else foreman start -f Procfile.dev; fi",
    "test": "eslint . --ignore-path .gitignore",
    "uglifyjs": "mkdir -p dist && find dist -name \\*.js | xargs -I FILENAME uglifyjs FILENAME -o FILENAME -c drop_console,warnings=false --stats",
    "watchify": "mkdir -p dist && watchify $npm_package_config_browserify_input -t [ envify --NODE_ENV development ] $npm_package_config_browserify_output --full-paths -v -d"
  },
  "config": {
    "browserify": {
      "input": "app/background.js app/every-frame.js app/top-frame.js app/options.js",
      "output": "-o dist/common.js -p [ factor-bundle -o dist/background.js -o dist/every-frame.js -o dist/top-frame.js -o dist/options.js ]"
    }
  },
  "browserify": {
    "transform": [
      [
        "envify",
        {
          "NODE_ENV": "production"
        }
      ],
      "require-globify",
      "ractivate",
      "ractiveify"
    ]
  },
  "dependencies": {
    "async": "^1.5.0",
    "cheerio": "^0.19.0",
    "connect-redis": "^3.0.2",
    "express": "^4.13.3",
    "express-session": "^1.11.3",
    "googleapis": "^2.1.6",
    "hovercardsshared": "git+https://111525bdeb58592d961e98cc19b2422ed45cbfed:x-oauth-basic@github.com:teamkogg/hovercardsshared.git#v3.0.0",
    "instagram-node": "^0.5.8",
    "jquery": "^2.1.4",
    "memoizee": "^0.3.9",
    "passport": "^0.2.2",
    "passport-twitter": "^1.0.3",
    "ractive": "^0.7.3",
    "redis": "^2.4.2",
    "request": "^2.65.0",
    "snoocore": "^3.2.0",
    "twit": "^2.1.1",
    "underscore": "^1.8.3",
    "urijs": "^1.17.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "browserify": "^11.2.0",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "cssfmt": "^1.4.1",
    "envify": "^3.4.0",
    "eslint": "^1.10.3",
    "eslint-config-xo": "^0.9.1",
    "eslint-plugin-react": "^3.15.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "factor-bundle": "^2.5.0",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.11.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "image-webpack-loader": "^2.0.0",
    "jquery": "^2.2.2",
    "nodemon": "^1.8.1",
    "postcss-class-prefix": "^0.3.0",
    "postcss-cli": "^2.3.2",
    "postcss-color-rgba-fallback": "^2.0.0",
    "postcss-extend": "^1.0.1",
    "postcss-import": "^7.0.0",
    "postcss-map-url": "^1.0.2",
    "postcss-reporter": "^1.2.1",
    "postcss-safe-important": "^1.0.4",
    "postcss-url": "^5.0.2",
    "pre-commit": "^1.1.2",
    "ractivate": "^0.2.0",
    "ractiveify": "^1.5.6",
    "require-globify": "^1.3.0",
    "style-loader": "^0.13.1",
    "uglify-js": "^2.4.24",
    "url-loader": "^0.5.7",
    "watch": "^0.16.0",
    "watchify": "^3.4.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "engines": {
    "node": ">= 4.1.0",
    "npm": ">= 3.9.0"
  },
  "pre-commit": [
    "fix",
    "test"
  ]
}
