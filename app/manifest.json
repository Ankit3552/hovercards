{
    "name": "__MSG_app_name__",
    "short_name": "__MSG_app_short_name__",
    "description": "__MSG_app_description__",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/top-frame.css"
            ],
            "js": [
                "scripts/top-frame-main.js"
            ],
            "all_frames": false
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/everywhere.css"
            ],
            "js": [
                "scripts/everywhere-main.js"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "https://w.soundcloud.com/player/*"
            ],
            "js": [
                "scripts/soundcloud-player-main.js"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["scripts/background-main.js"]
    },
    "page_action": {
        "default_icon": {
            "16": "images/logo-16.png",
            "19": "images/logo-19.png",
            "38": "images/logo-38.png",
            "128": "images/logo-128.png"
        }
    },
    "icons": {
        "16": "images/logo-16.png",
        "19": "images/logo-19.png",
        "38": "images/logo-38.png",
        "128": "images/logo-128.png"
    },
    "web_accessible_resources": [
        "hovercard.html",
        "sidebar.html",
        "images/closesidebar.png",
        "images/closebutton.png",
        "images/backbutton.png",
        "images/bringback.png",
        "images/yopoppyimgur.png",
        "images/yopoppyreddit.png",
        "images/yopoppy.png"
    ],
    "permissions": [
        "activeTab",
        "identity",
        "storage"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self' https://www.youtube.com",
    "default_locale": "en",
    "manifest_version": 2
}
