{
    "name": "__MSG_appName__",
    "version": "0.0.0",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "bower_components/jquery/dist/jquery.js",
            "scripts/loadHtml.js",
            "scripts/background.js"
        ]
    },
    "web_accessible_resources": [
        "images/*"
    ],
    "content_scripts": [
        {

            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/styles.css",
                "styles/fonts.css"
            ],
            "js": [
                "bower_components/jquery/dist/jquery.js",
                "scripts/putButtons.js",
                "scripts/main.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ]
}
