{
    "name": "__MSG_app_name__",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "__MSG_app_description__",
    "default_locale": "en",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "images/hovercards-logo-16.png",
        "128": "images/hovercards-logo-128.png"
    },
    "content_security_policy": "script-src 'self' https://apis.google.com https://cdn.supportkit.io; object-src 'self'",
    "web_accessible_resources": [
        "sidebar.html",
        "images/hovercards-notification.gif",
        "images/youtube-notification.gif"
    ],
    "background": {
        "page": "background.html"
    },
    "page_action": {
        "default_title": "__MSG_app_name__",
        "default_icon": {
            "19": "images/hovercards-omni-19.png",
            "38": "images/hovercards-omni-38.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/dom-styles.css"
            ],
            "js": [
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/notifications-inject.js",
                "scripts/sidebar-inject.js",
                "scripts/state-manager.js",
                "scripts/top-frame-main.js"
            ],
            "all_frames": false
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/embedded-trigger.js",
                "scripts/longpress-trigger.js",
                "scripts/trigger-inject.js",
                "scripts/everywhere-main.js"
            ],
            "all_frames": true
        }
    ]
}
