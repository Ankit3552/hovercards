{
    "name": "__MSG_appName__",
    "version": "0.0.0",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "background.html"
    },
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
    "web_accessible_resources": [
        "images/hovertoast-logo-white.png",
        "sidebar.html"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/dom-styles.css"
            ],
            "js": [
                "bower_components/purl/purl.js",
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/trigger.js",
                "scripts/youtube-video-button.js",
                "scripts/youtube-video-inject.js",
                "scripts/sidebar.js",
                "scripts/main-top-frame.js"
            ],
            "all_frames": false
        },
        {
            "matches": [
                "http://youtube.com/embed/*",
                "https://youtube.com/embed/*",
                "http://www.youtube.com/embed/*",
                "https://www.youtube.com/embed/*"
            ],
            "css": [
                "styles/dom-styles.css"
            ],
            "js": [
                "bower_components/purl/purl.js",
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/trigger.js",
                "scripts/youtube-video-button.js",
                "scripts/youtube-video-inject.js",
                "scripts/main-youtube-iframe.js"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "https://attachment.fbsbx.com/external_iframe.php"
            ],
            "css": [
                "styles/dom-styles.css"
            ],
            "js": [
                "bower_components/purl/purl.js",
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/trigger.js",
                "scripts/youtube-video-button.js",
                "scripts/youtube-video-inject.js",
                "scripts/main-facebook-youtube-iframe.js"
            ],
            "all_frames": true
        }
    ]
}
