{
    "name": "__MSG_appName__",
    "version": "0.0.0",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "default_locale": "en",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "content_security_policy": "script-src 'self' https://apis.google.com https://cdn.supportkit.io; object-src 'self'",
    "web_accessible_resources": [
        "sidebar.html",
        "images/youtube-notification.gif"
    ],
    "background": {
        "page": "background.html"
    },
    "page_action": {
        "default_title": "__MSG_appName__",
        "default_icon": {
            "19": "images/omni-default-19.png",
            "38": "images/omni-default-38.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/dom-styles.css"
            ],
            "js": [
                "bower_components/purl/purl.js",
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/hover-trigger.js",
                "scripts/sidebar-inject.js",
                "scripts/state-manager.js",
                "scripts/youtube-video-bind-triggers-on-player.js",
                "scripts/youtube-video-bind-triggers.js",
                "scripts/top-frame-main.js"
            ],
            "all_frames": false
        },
        {
            "matches": [
                "http://www.youtube.com/embed/*",
                "https://www.youtube.com/embed/*",
                "http://www.youtube-nocookie.com/embed/*",
                "https://www.youtube-nocookie.com/embed/*"
            ],
            "js": [
                "bower_components/purl/purl.js",
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/hover-trigger.js",
                "scripts/youtube-video-bind-triggers-on-player.js",
                "scripts/youtube-video-iframe-main.js"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "https://attachment.fbsbx.com/external_iframe.php"
            ],
            "js": [
                "bower_components/purl/purl.js",
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/hover-trigger.js",
                "scripts/youtube-video-bind-triggers-on-player.js",
                "scripts/youtube-video-bind-triggers.js",
                "scripts/facebook-youtube-video-iframe-main.js"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/hotkey-trigger.js",
                "scripts/everywhere-main.js"
            ],
            "all_frames": true
        }
    ]
}
