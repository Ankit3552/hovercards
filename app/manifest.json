{
    "name": "__MSG_app_name__",
    "short_name": "__MSG_app_short_name__",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "__MSG_app_description__",
    "default_locale": "en",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "images/yocards-logo-16.png",
        "128": "images/yocards-logo-128.png"
    },
    "content_security_policy": "script-src 'self' https://apis.google.com https://cdn.supportkit.io; object-src 'self' https://www.youtube.com",
    "web_accessible_resources": [
        "sidebar.html",
        "images/carlito-video-clicker.png",
        "images/carlito-video-clicker-fs.png",
        "images/yo-white.png",
        "images/yo-black.png",
        "images/youtube-notification.gif"
    ],
    "browser_action": {
        "default_icon": {
            "19": "images/yocards-logo-19.png",
            "38": "images/yocards-logo-38.png"
        }
    },
    "background": {
        "scripts": ["scripts/background-main.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/dom-styles.css"
            ],
            "js": [
                "scripts/top-frame-main.js"
            ],
            "all_frames": false
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/trigger-styles.css"
            ],
            "js": [
                "scripts/everywhere-main.js"
            ],
            "all_frames": true
        }
    ]
}
