{
    "name": "__MSG_appName__",
    "version": "0.0.0",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "background.html"
    },
    "web_accessible_resources": [
        "images/*",
        "sidebar.html"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://youtube.com/embed/*",
                "https://youtube.com/embed/*",
                "http://www.youtube.com/embed/*",
                "https://www.youtube.com/embed/*"
            ],
            "css": [
                "styles/styles.css",
                "styles/fonts.css"
            ],
            "js": [
                "bower_components/purl/purl.js",
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/youtube.js",
                "scripts/trigger.js",
                "scripts/youtube-button.js",
                "scripts/main-youtube-iframe.js"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/styles.css",
                "styles/fonts.css"
            ],
            "js": [
                "bower_components/purl/purl.js",
                "bower_components/requirejs/require.js",
                "scripts/config.js",
                "bower_components/jquery/dist/jquery.js",
                "scripts/youtube.js",
                "scripts/trigger.js",
                "scripts/youtube-button.js",
                "scripts/sidebar.js",
                "scripts/main.js"
            ],
            "all_frames": false
        }
    ]
}
